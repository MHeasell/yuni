			IF(MSVC)
				Set(YUNI_PROFILE_CXX_FLAGS_INSTRUCTIONS_SETS "${YUNI_PROFILE_CXX_FLAGS_INSTRUCTIONS_SETS} /arch:SSE2")
			ENDIF(MSVC)
		ENDIF(CMAKE_COMPILER_IS_GNUCXX)

		# SSE3
		IF("${YUNI_PROFILE_SSE3}" STREQUAL "yes")
