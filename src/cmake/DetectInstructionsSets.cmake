	IF(CMAKE_COMPILER_IS_GNUCXX)
		Set(YUNI_PROFILE_CXX_FLAGS_INSTRUCTIONS_SETS "${YUNI_PROFILE_CXX_FLAGS_INSTRUCTIONS_SETS} -msse -mfpmath=sse")
	ELSE(CMAKE_COMPILER_IS_GNUCXX)
		Set(YUNI_PROFILE_CXX_FLAGS_INSTRUCTIONS_SETS "${YUNI_PROFILE_CXX_FLAGS_INSTRUCTIONS_SETS} -msse -mfpmath=sse")
