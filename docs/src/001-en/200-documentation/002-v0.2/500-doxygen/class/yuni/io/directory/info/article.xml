  #include  &lt; yuni/io/directory/info.h &gt;
  #include  &lt;iostream&gt;

  using  namespace  Yuni;

  int  main()
  {
     IO::Directory::Info  info( "/tmp" );
     for  ( IO::Directory::Info::iterator  i  =  info.begin();  i  !=  info.end();  ++i)
     {
         std::cout  &lt;&lt;  *i  &lt;&lt;  std::endl;
     }
     return  0;
  }
